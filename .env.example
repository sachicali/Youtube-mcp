# YouTube Scraping MCP Server - Environment Configuration
# Copy this file to .env and fill in your values

# ============================================================================
# REQUIRED CONFIGURATION
# ============================================================================

# YouTube Data API v3 Key (Required)
# Get your API key from: https://console.developers.google.com/
YOUTUBE_API_KEY=your_youtube_api_key_here

# Environment Setting (Required)
# Options: development, staging, production
ENVIRONMENT=development

# ============================================================================
# OPTIONAL CONFIGURATION
# ============================================================================

# Logging Configuration
LOG_LEVEL=debug
DEBUG_MODE=true

# Cache Configuration (seconds)
CACHE_TTL=3600
MEMORY_CACHE_TTL=300
KV_CACHE_TTL=3600
LONG_TERM_CACHE_TTL=86400

# Rate Limiting
MAX_RETRIES=3
RATE_LIMIT_PER_MINUTE=60

# Performance Configuration
MAX_RESPONSE_TIME=500
API_BATCH_SIZE=50

# CORS Configuration
CORS_ALLOWED_ORIGINS=*

# Monitoring and Metrics
ENABLE_METRICS=true
QUOTA_WARNING_THRESHOLD=80

# Circuit Breaker Configuration
CIRCUIT_BREAKER_THRESHOLD=5
CIRCUIT_BREAKER_TIMEOUT=30000

# Health Check Configuration
HEALTH_CHECK_TIMEOUT=5000

# Error Handling
ERROR_NOTIFICATION_THRESHOLD=10

# Data Retention
METRICS_RETENTION_DAYS=30

# ============================================================================
# DEVELOPMENT NOTES
# ============================================================================

# For local development:
# 1. Copy this file to .env
# 2. Get a YouTube Data API v3 key from Google Cloud Console
# 3. Enable YouTube Data API v3 in your Google Cloud project
# 4. Set YOUTUBE_API_KEY to your actual API key
# 5. Keep ENVIRONMENT=development for local testing

# For production deployment:
# Use `wrangler secret put YOUTUBE_API_KEY` instead of .env file
# Set ENVIRONMENT=production
# Adjust cache TTL values for production workloads

# API Quotas:
# YouTube Data API v3 has a default quota of 10,000 units per day
# Monitor usage via Google Cloud Console
# Consider requesting quota increases for production